<%playoffs = Tournament.all.where(playoff: true )%>

<% playoffs.each do |playoff| %>

<h2><%= playoff.name %></h2>

<% matches = playoff.matches %>

<div class="col-2 filled">
  <h3>Cuartos de final #1</h3>
	<h3><%= matches[0].home_team.name%>  v/s <%=matches[0].visit_team.name %></h3>
	<h3><%= matches[0].local_goals%> - <%=matches[0].visitor_goals %></h3>
	<%= link_to 'Ir al partido',matches[0] %>
</div>

<div class="col-2"></div>

<div class="col-2"></div>

<div class="col-2"></div>

