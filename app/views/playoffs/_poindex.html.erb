<%playoffs = Tournament.all.where(playoff: true )%>

<% playoffs.each do |playoff| %>


<h2><%= playoff.name %></h2>

<% matches = playoff.matches.order('id ASC') %>

<div class="col-2 filled playoff">
  <h3>Cuartos de final #1</h3>
	<h4><%= matches[0].home_team.name%> </h4>
  <h4>v/s</h4>
  <h4><%=matches[0].visit_team.name %></h4>
  <% if matches[0].played %>
	 <h3><%= matches[0].local_goals%> - <%=matches[0].visitor_goals %></h3>
  <% else %>
    <h3>No jugado</h3>
  <% end %>

  <%= link_to 'Ir al partido',matches[0] %>
</div>

