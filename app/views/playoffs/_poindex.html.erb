    <% else %>
      <h3>No jugado</h3>
    <% end %>
		<%= link_to 'Ir al partido',matches[4] %>
  <% else %>
    <% if matches[0].winner && matches[2].winner %>
      <% match_update_visitor_team(matches[4], matches[0].winner) %>
      <% match_update_visitor_team(matches[4], matches[2].winner) %>
      <% match_update_datenum(matches[4], 4) %>
      <h3><%= matches[2].winner.name %> v/s <%= matches[0].winner.name %></h3>
    <% elsif matches[0].winner %>
      <h3><%= matches[0].winner.name %> esperando rival</h3>
    <% elsif matches[2].winner %>
      <h3><%= matches[2].winner.name %> esperando rival</h3>

    <% end %>
  <% end %>

</div>

