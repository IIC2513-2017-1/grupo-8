<%playoffs = Tournament.all.where(playoff: true )%>


<div class="tab">
<%default = true%>
<%clase = "tablinks defaultOpen"%>
<%for i in playoffs%>
<%a = "playoff"+ i.id.to_s + " tabcontent"%>

<button class="<%=clase%>" data-tab=<%=a%> ><%=i.name%></button>
<%if default%>
<%default = false%>
<%clase = "tablinks"%>

<%end%>
<%end%>
</div>

<%for i in playoffs%>
<%teams = i.teams%>
<%a = "playoff"+ i.id.to_s + " tabcontent"%>
