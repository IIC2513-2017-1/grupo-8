<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @tournament.name %>
</p>

<p>
  <b>Description:</b>
  <%= @tournament.description %>
</p>

<p>
  <b>Season:</b>
  <%= @tournament.season %>
</p>


<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Local</th>
      <th>Goles Local</th>
      <th>Goles Visitante</th>
      <th>Visitante</th>

      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @tournament.matches.each do |match| %>
  <tr>
    <td><%= match.date %></td>
    <td><%= match.time %></td>
    <td><%= Team.find_by_id(match.home_team_id).name %></td>
    <td><%= match.local_goals %></td>
    <td><%= match.visitor_goals %></td>
    <td><%= Team.find_by_id(match.visit_team_id).name %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<% if is_admin_logged_in? %>
  <!-- /divisions/:division_id/tournaments/:id/edit -->
  <%= link_to 'Edit', edit_division_tournament_path(@tournament.division, @tournament) %> |
  <%= link_to 'Crear Fixture', division_fixture_path(@tournament.division, @tournament) %> |
<% end %>

<!-- /divisions/:division_id/tournaments/ -->
<%= link_to 'Back', division_tournaments_path(@tournament.division) %>
