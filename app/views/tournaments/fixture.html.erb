<h1>Crear fixture</h1>


  <table>
    <tbody>
      <tr class="checkers">
        <td>
          <% @check_locations = false %>
          <%= check_box_tag(@check_locations, true, false,
              :onclick=>
              "if (checked)
                {$('.match_hour').hide();
              } else {
                $('.match_hour').show();
                }")%>

          <p id="po" value="true"><%= @check_locations %></p>
        </td>
      </tr>
    </tbody>
  </table>
<br />


<%= form_tag({method: "post"}, {class: 'editmatch'}) do %>

<% numbers = [1,2,3,4,5,6,7] %>

<% numbers.each do |number| %>
  <table>
    <thead>
      <tr>
        <th>
          <h2>Jornada <%= number %></h2>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= label_tag(:"date#{number}", "Fecha") %>
        </td>
        <td>
          <%= date_select(:"date#{number}","Fecha#{number}", selected: Date.today) %>
        </td>
        <td>
          <%= label_tag(:"address#{number}", "Lugar")%>
        </td>
        <td>
          <%= text_field_tag(:"place#{number}", nil, placeholder: 'Nombre') %>
        </td>
        <td>
          <%= text_field_tag(:"address#{number}", nil, placeholder: 'DirecciÃ³n') %>
        </td>
        <td>
          <%= text_field_tag(:"commune#{number}", nil, placeholder: 'Comuna') %>
        </td>
      </tr>

      <% [1,3].each do |time| %>
      <% if number != 1  %>
        <tr class="match_hour">
      <% else %>
        <tr class="">
      <% end %>
        <td></td>
        <td>
          <%= label_tag(:"time#{(number-1)*4+time}", "Hora #{(number-1)*4+time}") %>
        </td>
        <td>
          <%= time_select(:"time#{(number-1)*4+time}","Hora #{(number-1)*4+time}") %>
        </td>
        <td></td>
        <td>
          <%= label_tag(:"time#{(number-1)*4+1+time}", "Hora #{(number-1)*4+1+time}") %>
        </td>
        <td>
          <%= time_select(:"time#{(number-1)*4+1+time}","Hora #{(number-1)*4+1+time}") %>
        </td>
      </tr>
      <% end %>

    </tbody>
  </table>
  <br />
<% end %>

<div class="field">
  <%= submit_tag("Crear", class: 'btn btn-primary') %>
</div>


<% end %>
