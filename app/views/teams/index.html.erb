<p id="notice"><%= notice %></p>


<div id="team_index">


<h1 class="table_text">Equipos</h1>

<% Division.all.each do |division| %>
  <h2 class="table_text"><%= division.name %></h2>
    <table class= "tabla_teams">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Emblema</th>

        </tr>
      </thead>

      <tbody>
        <% division.teams.each do |team| %>
          <tr>
            <td><%= link_to team.name, team,class: 'black-button' %></td>
            <td><%= image_tag team.logo.url(:thumb) %></td>




            <% if is_admin_logged_in? %>
              <td><%= link_to 'Edit', edit_team_path(team) %></td>
              <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>

<br>

<% if is_admin_logged_in? %>
  <%= link_to 'New Team', new_team_path %>
<% end %>
</div>
