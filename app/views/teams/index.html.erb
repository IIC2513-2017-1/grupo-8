<p id="notice"><%= notice %></p>

<h1>Equipos</h1>

<% Division.all.each do |division| %>
  <h2><%= division.name %></h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Points</th>
          <th>Won</th>
          <th>Lost</th>
          <th>Tie</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% division.teams.each do |team| %>
          <tr>
            <td><%= team.name %></td>
            <td><%= image_tag team.logo.url(:thumb) %></td>
            <td><%= team.points %></td>
            <td><%= team.won %></td>
            <td><%= team.lost %></td>
            <td><%= team.tie %></td>
            <td><%= link_to 'Show', team %></td>
            <% if is_admin_logged_in? %>
              <td><%= link_to 'Edit', edit_team_path(team) %></td>
              <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>

<br>

<% if is_admin_logged_in? %>
  <%= link_to 'New Team', new_team_path %>
<% end %>
