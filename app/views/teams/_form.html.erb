  </div>

  



  <div class="field">
    <%= f.label :logo %>
    <%= f.file_field :logo %>
  </div>

  <div class="field">
    <%= f.label :points %>
    <%= f.number_field :points %>
  </div>

  <div class="field">
    <%= f.label :won %>
    <%= f.number_field :won %>
  </div>

  <div class="field">
    <%= f.label :lost %>
    <%= f.number_field :lost %>
  </div>

  <div class="field">
    <%= f.label :tie %>
    <%= f.number_field :tie %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
