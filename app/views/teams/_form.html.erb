<%= form_for @team, html: { multipart: true } do |f| %>
  <% if team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% @team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :division_id %>
    <%= f.select :division_id, options_for_select(Division.all.map{ |c| [c.name, c.id] })  %>
  </div>

  <div class="field">
    <%= label_tag :tournament_id, "Division del playoff" %>
    <%= select_tag :tournament_id, options_for_select(Tournament.all.where(playoff: false).map{ |c| [c.name, c.id] })  %>
  </div>

  <div class="field">
    <%= f.label :logo %>
    <%= f.file_field :logo %>
  </div>



  <div class="actions">
    <%= f.submit 'Enviar' %>
  </div>
<% end %>
