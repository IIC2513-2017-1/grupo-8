<p id="notice"><%= notice %></p>

<main>


<div class="galeria">


<h1>Galer√≠a de fotos</h1>


    <% @pictures.each do |picture| %>
    <div class="gallery" data-gallery-id="<%=picture.id%>">

        <%=image_tag picture.image.url(:thumb), class: "img_logo", id: "myImg" %>
        <!-- <a class = "foto" href= pictures/<%=picture.id%> ><%=image_tag picture.image.url(:thumb) %></a> -->

        <div class="image_desc">

        <p><%= picture.comment %></p>
        <td><%= picture.date %></td>




        <% if is_admin_logged_in? %>
          <td class="gallery_td"><%= link_to 'Edit', edit_picture_path(picture),class: 'new-button' %></td>
          <td class="gallery_td"><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' },class: 'new-button' %></td>

        <% end %>


      </div>

        </div>


    <% end %>

    <%= image_tag "laliga.png", class: "img_logo", id:"myImg" %>


    <!-- The Modal -->
    <div id="myModal" class="modal">
      <span class="close">&times;</span>
      <img class="modal-content" id="img01">
      <div id="caption"></div>
    </div>




</main>
<div class="final_gallery">
  <% if is_admin_logged_in? %>
    <%= link_to 'Agregar Foto', new_picture_path  ,id: 'bottom_button',class: 'new-button'%>
  <% end %>
</div>
