<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<h3>Comentarios</h3>
<% if @post && @post.comments %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Usuario</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @post.comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.user.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'Crear comentario', new_comment_path(@post) %> |
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
