<div class="login-content">
  <%= form_for(:session, url: login_path) do |f| %>

    <div class="field">
      <%= f.label :email, class: 'name' %>
      <%= f.email_field :email, required: true %>
    </div>

    <div class="field">
      <%= f.label :password, "ContraseÃ±a" %>
      <%= f.password_field :password, required: true %>
