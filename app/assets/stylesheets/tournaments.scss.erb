.tournament-info {
  width: 100%;
  height: 440px;
  margin: 0;
  background-image: url(<%= asset_path 'cup.jpg'%>);
  background-size: cover;
  background-repeat: no-repeat;
  .space {
    height: 230px;
  }
  .basic {
    background-color: rgba(200,10,0,0.7);
    padding: 10px 0 10px 0;
    width: 80%;
    margin: 0 auto;
    text-align: center;
    color: white;
    height: 130px;
    h3 {
      text-align: center;
    }
  }
  .btns {
    height: 30px;
    margin: 0 0 10px 500px;
    width: 100%;
  }
}
