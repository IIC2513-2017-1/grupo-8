.team-info {
  width: 100%;
  height: 385px;
  margin: 0;
  background-image: url(<%= asset_path 'futbol.jpg'%>);
  background-size: cover;
  background-repeat: no-repeat;
  .basic {
    background-color: rgba(200,10,0,0.7);
    padding: 30px 0 30px 0;
    margin: 0 0 30px 0;
    text-align: center;
    color: white;
    h3 {
      text-align: center;
    }
  }
  .box-wrapper {
    margin: 40px;
    .box {
      h1 {
        text-align: center;
        text-decoration-style: solid;
      }
      border: 1px solid #CCCCCC;
      text-align: center;
      display: inline-block;
      height: 112px;
      width: 112px;
      background: white;
      margin: 0 3.6% 0 3.6%;
      padding: 10px;
    }
  }
}

.players-wrapper {
  background: white;
  width: 20%;
  padding: 20px;
  margin: 20px 0 10px 0;
  text-align: center;
  display: inline-block;
}
