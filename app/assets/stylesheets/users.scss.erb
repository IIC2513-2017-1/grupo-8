.player-info {
  width: 100%;
  height: 450px;
  margin: 0;
  background-size: cover;
  background-repeat: no-repeat;
  background-image: url(<%= asset_path 'player.jpg'%>);

  .basic {
    background-color: rgba(200,10,0,0.7);
    padding: 10px 0 20px 0;
    margin: 0 0 20px 0;
    text-align: center;
    color: white;
    h3 {
      text-align: center;
    }
  }
  .box-wrapper {
    margin: 40px;
    width: 90%;
    .box {
      h1 {
        text-align: center;
        text-decoration-style: solid;
      }
      border: 1px solid #CCCCCC;
      text-align: center;
      display: inline-block;
      height: 112px!important;
      width: 112px!important;
      background: white;
      margin: 0 10% 0 10%;
      padding: 10px;
    }
  }
}
