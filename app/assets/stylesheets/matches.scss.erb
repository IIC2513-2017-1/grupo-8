.panel-match {
  display: inline-block;
  height: 80px;
  width: 1150px;
  position: relative;
  margin: 10px 0 10px 0;
  padding: 10px;
  background: white;
  .date {
    width: 100%;
    text-align: center;
    margin: 10px;
  }
  .result {
    width: 100%;
    text-align: center;
    margin: 10px;
    font-size: 120%;
    .btns {
      right: 20px;
      position: absolute;
      margin-top: -20px;

    }
  }
}


.match-info {
  width: 100%;
  height: 440px;
  margin: 0;
  background-image: url(<%= asset_path 'match.jpg'%>);
  background-size: cover;
  background-repeat: no-repeat;
  .tournament {
    padding: 0px;
    height: 40px;
    width: 240px;
    border-radius: 5px;
    margin: 0 auto;
    background-color: #C80A00;
    color: #FFF;
    text-align: center;
    h4 {
      padding: 10px;
    }

  }
  .space {
    height: 80px;
  }
  .space1 {
    height: 30px;
  }
  .basic {
    background-color: rgba(0,0,0,0.5);
    padding: 10px 0 10px 0;
    width: 80%;
    margin: 0 auto;
    text-align: center;
    color: white;
    height: 180px;
    h3 {
      text-align: center;
    }
  }
  .result {
    display: inline-block;
    h3, h1 {
      display: inline-block;
      margin: 0;
    }
    h3 {
      padding: 0 80px 0 80px;
    }
  }

}
